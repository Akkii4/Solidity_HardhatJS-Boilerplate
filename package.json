{
  "name": "solidity_hardhatboilerplate",
  "version": "1.0.0",
  "description": "Template for Solidity-Hardhat Projects",
  "author": "Akshit Choudhary",
  "scripts": {
    "test": "npx hardhat test",
    "test:coverage": "npx hardhat coverage",
    "compile": "npx hardhat compile",
    "lint:js": "npx eslint '**/*.js'",
    "lint:js-fix": "npx eslint '**/*.js' --fix",
    "lint:sol": "npx prettier '**/*.{json,sol,md}' --check && npx solhint 'contracts/**/*.sol'",
    "lint:sol-fix": "npx prettier '**/*.{json,sol,md}' --write && npx solhint 'contracts/**/*.sol' --fix",
    "lint": "npm run lint:js && npm run lint:sol",
    "lint:fix": "npm run lint:js-fix && npm run lint:sol-fix",
    "prepare": "husky install"
  },
  "directories": {
    "test": "test"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "2.0.0",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "ethers": "^5.7.2",
    "hardhat": "^2.17.0",
    "husky": "^8.0.3",
    "prettier": "^2.8.3",
    "prettier-plugin-solidity": "^1.1.1",
    "solhint": "^3.3.8",
    "solhint-plugin-prettier": "^0.0.5"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.2"
  }
}
